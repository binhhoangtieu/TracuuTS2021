@model IEnumerable<WebTracuu.Models.ThongTin>

@{
    ViewBag.Title = "ViewDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table border="1">
    <tr>
        <th>STT </th>
        <th>Mã ngành TS</th>
        <th>Ngành xét tuyển</th>
        <th>Tổ hợp thi</th>
        <th>Chỉ tiêu</th>
    </tr>
    @{int index = 1;}
    @foreach (var item in Model)
    {
        <tr>
            <td>  @index</td>
            <td> @item.Ma_nganh </td>
            <td>@Html.ActionLink(@item.Nganh == null ? "_" : @item.Nganh, "ViewDetail", new { nganh = @item.Nganh })</td>
            <td>@item.To_hop_thi</td>
            <td  style="text-align:center;">@item.Chi_Tieu</td>
        </tr>
        index++;
    }
</table>
